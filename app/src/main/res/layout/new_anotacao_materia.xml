<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="32dp"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtNewNoteTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Coloque um título..."
            android:padding="5dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/edtNewNoteDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00/00/0000"
            android:textSize="20sp"
            android:layout_marginLeft="16dp"/>

        <Button
            android:id="@+id/btnExcluir"
            android:layout_width="33dp"
            android:layout_height="41dp"
            android:backgroundTint="@color/verdeClaro"
            android:text="Button"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/edtNotaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Digite uma anotação..."
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="45mm"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/verdeClaro"
        android:text="Salvar"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>